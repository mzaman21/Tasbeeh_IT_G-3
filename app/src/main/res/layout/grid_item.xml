<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/g_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="Date"
        android:textColor="#2196F3"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/g_kalma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:text="Kalma"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/g_darood"
        app:layout_constraintEnd_toStartOf="@+id/g_darood" />

    <TextView
        android:id="@+id/g_darood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:text="Darood"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/g_astgfar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/g_astgfar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:text="Astgfar"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/g_darood"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>